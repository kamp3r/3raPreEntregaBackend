<div class="px-8 py-6 mt-4 text-left bg-white shadow-lg md:w-1/2 lg:w-1/2 sm:w-1/2">
    <h3 class="text-2xl font-bold text-center">Tu información</h3>
        <%if(user){%>
            <form action="auth/edit/<%=user.id%>?_method=PATCH" method="POST" enctype="multipart/form-data">
        <div class="mt-4">
            <div>
                <label class="block" for="name">Nombre<label>
                        <input type="text" placeholder="Nombre"
                        name="name"
                            class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" value="<%=user.name%>">
                            
            </div>
            <div>
                <label class="block" for="lastName">Apellido<label>
                        <input type="text" placeholder="Apellido"
                        name="lastName"
                            class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" value="<%=user.lastName%>">
            </div>
            <div class="mt-4">
                <label class="block" for="email">Email<label>
                        <input type="text" placeholder="Email"
                        name="email"
                            class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" value="<%=user.email%>">
            </div>
            <div class="mt-4">
                <label class="block" for="address">Dirección<label>
                        <input type="text" placeholder="Dirección" name="address"
                            class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" value="<%=user.address%>">
            </div>
            <div class="mt-4">
                <label class="flex flex-col" for="phonex">Teléfono<label>
                    <div class="alert alert-info" style="display: none;"></div>
                    <input id="phoneupdate" type="tel" name="full_phone"
                            class="w-full py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" value="<%=user.phone%>">
            </div>
            <div>
                <label class="block" for="picture">Foto de perfil<label>
                        <input type="file" name="picture" class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" value="<%=user.picture%>">
            </div>
            <div class="mt-4">
                <label for="password" class="block">Password<label>
                        <input type="password" placeholder="Password" name="password"
                            class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600">
            </div>
            <div class="flex">
                <button class="w-full px-6 py-2 mt-4 text-white bg-blue-600 rounded-lg hover:bg-blue-900">Actualizar datos</button>
            </div>
        <%}%>
        </div>
    </form>
</div>
</div>