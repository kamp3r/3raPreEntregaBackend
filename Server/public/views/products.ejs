<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>E-Commerce</title>
  </head>
  <body>
    <%- include ('./partials/header.ejs')%>

    <section class="flex items-center flex-wrap mx-10 my-10">
      <% if(products.length > 0) {%> <% products.forEach((prods)=>{ %>
      <div
        class="justify-start max-w-s mbg-white rounded-lg shadow-md bg-emerald-800 dark:border-gray-700 m-2"
      >
        <a href="#">
          <img
            class="h-72 p-8 rounded-tl-md"
            src="<%=prods.thumbnail%>"
            alt="<%=prods.title%>"
          />
        </a>
        <div class="px-5 pb-5 text-center">
          <a href="#">
            <h5
              class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white"
            >
              <%=prods.title%>
            </h5>
          </a>
          <div class="flex flex-col justify-between items-center">
            <span class="text-2xl font-bold text-gray-900 dark:text-white"
              >$<%=prods.price%></span
            >
            <a
              href="#"
              class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-3 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
              >Add to cart</a
            >
          </div>
        </div>
      </div>
      <% }) %> </section> <% }else{ %>
        <h2 class="self-center text-2xl font-bold text-red-900">
          No products found
        </h2>
      </div>
      <% } %>
    </section>
    <script src="../JS/index.js"></script>
  </body>
</html>
